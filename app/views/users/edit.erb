<h1>Edit Account</h1>

<%if flash[:errors]%>
  <% flash[:errors].each do |error|%>
    <%= error %>
  <%end%>
<%end%>

<%=form_for @user do |f|%>
<h3><%=f.label "Create User Name:"%></h3>
<%=f.text_field :user_name%>
<h3><%=f.label "Create a Password:"%></h3>
<%=f.password_field :password_digest%>
<%=f.submit 'Create'%>
<%end%>

<%=button_to 'Back to Login', login_path, {method: :get}%>
<br><br><br>
<%=button_to 'Delete Account', login_path, method: :delete%>
