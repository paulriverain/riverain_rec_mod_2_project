<h1>Riverain Recreation</h1>


<H2>Login</h2>

<%if flash[:errors]%>
  <% flash[:errors].each do |error|%>
    <%= error %>
  <%end%>
<%end%>

<%=form_for(@user, url: login_path) do |f|%>
<h3><%=f.label "User Name:"%></h3>
<%=f.text_field :user_name%>
<h3><%=f.label "Password:"%></h3>
<%=f.submit 'Login'%>

<%end%>
<%=button_to 'New User', new_user_path, {method: :get}%>
