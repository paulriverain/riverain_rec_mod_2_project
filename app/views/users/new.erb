<h1>Create Account</h1>

<%if flash[:errors]%>
  <% flash[:errors].each do |error|%>
    <%= error %>
  <%end%>
<%end%>

<%=form_for @user do |f|%>
  <h3><%=f.label "Create User Name:"%></h3>
  <%=f.text_field :user_name%>
  <h3><%=f.label "Create a Password:"%></h3>
  <p><%=f.password_field :password%></p>
  <%=f.submit 'Create Account'%>
<%end%>
<br>
<%=button_to 'Back to Login', login_path, {method: :get}%>
