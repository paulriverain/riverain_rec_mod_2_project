<div class="page">

  <h1><%=@user_now.user_name%>'s Profile Page</h1>
  <br />
  <%# <%=@user_now.user_name%>
  <%=button_to 'Edit Profile', edit_user_path, method: :get%>
  <br />
  <h4>Trip List:</h4>
  <br />
  <%=flash[:notice]%>
    <div class="trips-container">
      <ol>
      <%@user_now.reservations.each do |reservation|%>
          <div class="trip-card">
            <br />
            <h3><li><%=link_to reservation.trip.trip_name, trip_path(reservation.trip)%></li></h3>
              <div class="removebtm">
              <%= button_to "Remove", remove_reservation_path(reservation), method: :delete%>
              </div>
            <br />
          </div>
      <%end%>
      </ol>
    </div>
</div>
