
<div class="trips-wrapper">
  <br />
  <h1>All Trips:</h1>
  <%# <%=button_to "~~~#{@user_now.user_name}'s Profile Page~~~", user_path(@user_now.id), method: :get%>
  <%# <%=button_to "unbooked trips", unbooked_path, method: :get%>
  <br />

  <div class="trips-container">
  <%@trips.each do |trip|%>
    <br />
    <div class="trip-card">
      <h4><%=link_to trip.trip_name, trip_path(trip)%></h4>
      <%=flash[:notice]%>
      <p>Description:  <%=trip.description%></p>
      <%=button_to "Add to list:", '/reservations', {method: :post,  params: {trip_id: trip.id, user_id: @user_now.id}}%>
      <br><br>
    </div>
  <%end%>
  </div>
  <br>
</div>
